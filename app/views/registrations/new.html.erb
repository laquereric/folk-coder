<section class="pt-32 pb-20 px-4">
  <div class="max-w-md mx-auto">
    <h1 class="text-3xl font-bold text-center mb-8"><%= t('registrations.new.title') %></h1>

    <% if @user.errors.any? %>
      <div class="bg-red-500/10 border border-red-500/50 rounded-lg p-4 mb-6">
        <% @user.errors.full_messages.each do |msg| %>
          <p class="text-red-400 text-sm"><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <%= form_with model: @user, url: registration_path, class: "space-y-6" do |form| %>
      <div>
        <%= form.label :name, t('registrations.new.name_label'), class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.text_field :name, required: true, autofocus: true,
            class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:border-folk-blue focus:ring-1 focus:ring-folk-blue",
            placeholder: t('registrations.new.name_placeholder') %>
      </div>

      <div>
        <%= form.label :email_address, t('registrations.new.email_label'), class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.email_field :email_address, required: true, autocomplete: "email",
            class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:border-folk-blue focus:ring-1 focus:ring-folk-blue",
            placeholder: t('registrations.new.email_placeholder') %>
      </div>

      <div>
        <%= form.label :password, t('registrations.new.password_label'), class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.password_field :password, required: true, autocomplete: "new-password", maxlength: 72,
            class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:border-folk-blue focus:ring-1 focus:ring-folk-blue",
            placeholder: t('registrations.new.password_placeholder') %>
      </div>

      <div>
        <%= form.label :password_confirmation, t('registrations.new.confirm_password_label'), class: "block text-sm font-medium text-gray-300 mb-2" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", maxlength: 72,
            class: "w-full bg-gray-800 border border-gray-700 rounded-lg px-4 py-3 text-gray-100 placeholder-gray-500 focus:outline-none focus:border-folk-blue focus:ring-1 focus:ring-folk-blue",
            placeholder: t('registrations.new.confirm_password_placeholder') %>
      </div>

      <%= form.submit t('registrations.new.submit'), class: "w-full bg-folk-blue hover:bg-blue-600 text-white py-3 rounded-lg font-semibold transition cursor-pointer" %>
    <% end %>

    <p class="text-center text-gray-400 mt-6">
      <%= t('registrations.new.already_have_account') %> <%= link_to t('registrations.new.sign_in'), new_session_path, class: "text-folk-blue hover:underline" %>
    </p>
  </div>
</section>
