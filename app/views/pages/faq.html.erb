<section class="pt-32 pb-20 px-4">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-4"><%= t('pages.faq.title') %></h1>
    <p class="text-gray-400 text-lg mb-12"><%= t('pages.faq.subtitle') %></p>

    <div class="space-y-8">
      <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
        <h2 class="text-xl font-semibold text-folk-blue mb-3"><%= t('pages.faq.q1_title') %></h2>
        <p class="text-gray-300 leading-relaxed">
          <%= t('pages.faq.q1_answer_html') %>
        </p>
      </div>

      <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
        <h2 class="text-xl font-semibold text-folk-blue mb-3"><%= t('pages.faq.q2_title') %></h2>
        <p class="text-gray-300 leading-relaxed mb-4">
          <%= t('pages.faq.q2_answer_p1_html') %>
        </p>
        <p class="text-gray-300 leading-relaxed mb-4">
          <%= t('pages.faq.q2_answer_p2_html') %>
        </p>
        <p class="text-gray-300 leading-relaxed">
          <%= t('pages.faq.q2_answer_p3_html') %>
        </p>
      </div>

      <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-6">
        <h2 class="text-xl font-semibold text-folk-blue mb-3"><%= t('pages.faq.q3_title') %></h2>
        <p class="text-gray-300 leading-relaxed">
          <%= t('pages.faq.q3_answer_html') %>
        </p>
      </div>

      <div class="text-center pt-8">
        <p class="text-gray-400 mb-4"><%= t('pages.faq.cta_text') %></p>
        <%= link_to t('pages.faq.cta_button'), hackathons_path,
            class: "inline-block bg-folk-blue hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-medium transition" %>
      </div>
    </div>
  </div>
</section>
