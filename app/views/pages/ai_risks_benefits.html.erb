<!-- Hero -->
<section class="pt-32 pb-12 px-4">
  <div class="max-w-5xl mx-auto text-center">
    <h1 class="text-4xl font-bold mb-4"><%= t('pages.ai_risks_benefits.title') %></h1>
    <p class="text-gray-400 text-lg"><%= t('pages.ai_risks_benefits.subtitle') %></p>
  </div>
</section>

<!-- Risks & Benefits Grid -->
<section class="pb-12 px-4">
  <div class="max-w-5xl mx-auto grid md:grid-cols-2 gap-8">
    <!-- Risks Card -->
    <div class="bg-gray-800/50 border border-red-900/40 rounded-xl p-6">
      <h2 class="text-2xl font-semibold text-red-400 mb-4"><%= t('pages.ai_risks_benefits.risks_title') %></h2>
      <ul class="space-y-3 text-gray-300 leading-relaxed list-disc list-inside">
        <%= t('pages.ai_risks_benefits.risks_items_html') %>
      </ul>
    </div>

    <!-- Benefits Card -->
    <div class="bg-gray-800/50 border border-green-900/40 rounded-xl p-6">
      <h2 class="text-2xl font-semibold text-folk-green mb-4"><%= t('pages.ai_risks_benefits.benefits_title') %></h2>
      <ul class="space-y-3 text-gray-300 leading-relaxed list-disc list-inside">
        <%= t('pages.ai_risks_benefits.benefits_items_html') %>
      </ul>
    </div>
  </div>
</section>

<!-- Dario Amodei Essay Card -->
<section class="pb-20 px-4">
  <div class="max-w-5xl mx-auto">
    <div class="bg-gray-800/50 border border-folk-blue/30 rounded-xl p-8">
      <span class="inline-block bg-folk-blue/10 text-folk-blue text-xs font-semibold px-3 py-1 rounded-full mb-4"><%= t('pages.ai_risks_benefits.essay_badge') %></span>
      <h2 class="text-2xl font-bold text-white mb-1"><%= t('pages.ai_risks_benefits.essay_title') %></h2>
      <p class="text-gray-400 text-sm mb-6"><%= t('pages.ai_risks_benefits.essay_author') %></p>

      <p class="text-gray-300 leading-relaxed mb-4">
        <%= t('pages.ai_risks_benefits.essay_summary_html') %>
      </p>

      <p class="text-gray-300 leading-relaxed mb-4">
        <%= t('pages.ai_risks_benefits.essay_risks_html') %>
      </p>

      <p class="text-gray-300 leading-relaxed mb-6">
        <%= t('pages.ai_risks_benefits.essay_timeline_html') %>
      </p>

      <div class="flex flex-wrap gap-4">
        <a href="https://darioamodei.com/machines-of-loving-grace"
           target="_blank" rel="noopener noreferrer"
           class="inline-block bg-folk-blue hover:bg-blue-600 text-white px-5 py-2.5 rounded-lg font-medium transition">
          <%= t('pages.ai_risks_benefits.essay_link_text') %> &rarr;
        </a>
        <a href="https://medium.com/activated-thinker/anthropics-ceo-just-dropped-a-20-000-word-warning-about-2027-512aa4340f2a"
           target="_blank" rel="noopener noreferrer"
           class="inline-block border border-gray-600 hover:border-gray-400 text-gray-300 hover:text-white px-5 py-2.5 rounded-lg font-medium transition">
          <%= t('pages.ai_risks_benefits.essay_summary_link_text') %>
        </a>
      </div>
    </div>
  </div>
</section>
