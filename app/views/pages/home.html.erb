<!-- Hero Section -->
<section class="pt-32 pb-20 px-4">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-5xl md:text-7xl font-bold mb-6">
      <%= t('pages.home.hero_title_html') %>
    </h1>
    <p class="text-xl md:text-2xl text-gray-400 mb-10 max-w-2xl mx-auto">
      <%= t('pages.home.hero_subtitle') %>
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to t('pages.home.hero_cta_primary'), new_registration_path, class: "bg-folk-blue hover:bg-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold transition" %>
      <%= link_to t('pages.home.hero_cta_secondary'), hackathons_path, class: "border border-gray-600 hover:border-gray-400 text-gray-300 hover:text-white px-8 py-4 rounded-lg text-lg font-medium transition" %>
    </div>
  </div>
</section>

<!-- How It Works -->
<section id="how-it-works" class="py-20 px-4 bg-gray-900/50">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-16"><%= t('pages.home.how_it_works_title') %></h2>
    <div class="grid md:grid-cols-3 gap-12">
      <div class="text-center">
        <div class="w-16 h-16 bg-folk-blue/20 text-folk-blue rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">1</div>
        <h3 class="text-xl font-semibold mb-3"><%= t('pages.home.step1_title') %></h3>
        <p class="text-gray-400"><%= t('pages.home.step1_text') %></p>
      </div>
      <div class="text-center">
        <div class="w-16 h-16 bg-folk-green/20 text-folk-green rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">2</div>
        <h3 class="text-xl font-semibold mb-3"><%= t('pages.home.step2_title') %></h3>
        <p class="text-gray-400"><%= t('pages.home.step2_text') %></p>
      </div>
      <div class="text-center">
        <div class="w-16 h-16 bg-folk-purple/20 text-folk-purple rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6">3</div>
        <h3 class="text-xl font-semibold mb-3"><%= t('pages.home.step3_title') %></h3>
        <p class="text-gray-400"><%= t('pages.home.step3_text') %></p>
      </div>
    </div>
  </div>
</section>

<!-- Features -->
