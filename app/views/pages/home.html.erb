<!-- Community -->
<section class="py-20 px-4 bg-gray-900/50">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-16"><%= t('pages.home.community_title') %></h2>
    <div class="grid grid-cols-2 gap-8 mb-12 max-w-2xl mx-auto">
      <div>
        <div class="text-4xl md:text-5xl font-bold text-folk-blue"><%= @user_count %></div>
        <p class="text-gray-400 mt-2"><%= t('pages.home.stat_developers') %></p>
      </div>
      <div>
        <div class="text-4xl md:text-5xl font-bold text-folk-green"><%= @hackathon_count %></div>
        <p class="text-gray-400 mt-2"><%= t('pages.home.stat_hackathons') %></p>
      </div>
    </div>
  </div>
</section>

<!-- The Starting Gate -->
<section id="starting-gate" class="py-20 px-4 bg-gradient-to-br from-folk-blue/10 to-folk-purple/10">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-6"><%= t('pages.home.starting_gate_title') %></h2>
    <p class="text-gray-400 text-center text-lg mb-12 max-w-2xl mx-auto">
      <%= t('pages.home.starting_gate_subtitle') %>
    </p>
    <div class="grid md:grid-cols-2 gap-8">
      <div class="bg-gray-800/80 border border-gray-700 rounded-xl p-8 md:p-12">
        <div class="flex items-center gap-3 mb-4">
          <span class="bg-folk-green/20 text-folk-green text-sm font-medium px-3 py-1 rounded-full"><%= t('pages.home.starting_gate_badge') %></span>
        </div>
        <h3 class="text-2xl md:text-3xl font-bold mb-4"><%= t('pages.home.starting_gate_name') %></h3>
        <p class="text-gray-400 text-lg mb-6">
          <%= t('pages.home.starting_gate_text_html') %>
        </p>
        <a href="https://github.com/CbiPerson/swarmpod-core" class="inline-block bg-folk-green hover:bg-green-600 text-white px-6 py-3 rounded-lg font-medium transition">
          <%= t('pages.home.starting_gate_cta') %>
        </a>
      </div>
      <div class="bg-gray-800/80 border border-gray-700 rounded-xl p-8 md:p-12">
        <div class="flex items-center gap-3 mb-4">
          <span class="bg-folk-blue/20 text-folk-blue text-sm font-medium px-3 py-1 rounded-full"><%= t('pages.home.starting_gate_2_badge') %></span>
        </div>
        <h3 class="text-2xl md:text-3xl font-bold mb-4"><%= t('pages.home.starting_gate_2_name') %></h3>
        <p class="text-gray-400 text-lg mb-6">
          <%= t('pages.home.starting_gate_2_text_html') %>
        </p>
        <a href="https://github.com/CbiPerson/claude-on-rails-demo" class="inline-block bg-folk-blue hover:bg-blue-600 text-white px-6 py-3 rounded-lg font-medium transition">
          <%= t('pages.home.starting_gate_2_cta') %>
        </a>
      </div>
    </div>
    <p class="text-gray-500 text-sm mt-6 text-center"><%= t('pages.home.starting_gate_partner_html') %></p>
  </div>
</section>

<!-- For Everyone -->
<section class="py-20 px-4">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-16"><%= t('pages.home.for_everyone_title') %></h2>
    <div class="grid md:grid-cols-3 gap-8">
      <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-8">
        <h3 class="text-xl font-semibold mb-4 text-folk-blue"><%= t('pages.home.for_developers_title') %></h3>
        <p class="text-gray-400"><%= t('pages.home.for_developers_text') %></p>
      </div>
      <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-8">
        <h3 class="text-xl font-semibold mb-4 text-folk-green"><%= t('pages.home.for_organizers_title') %></h3>
        <p class="text-gray-400"><%= t('pages.home.for_organizers_text') %></p>
      </div>
      <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-8">
        <h3 class="text-xl font-semibold mb-4 text-folk-purple"><%= t('pages.home.for_sponsors_title') %></h3>
        <p class="text-gray-400"><%= t('pages.home.for_sponsors_text') %></p>
      </div>
    </div>
  </div>
</section>

<!-- Final CTA -->
