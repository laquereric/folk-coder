  <div class="max-w-3xl mx-auto text-center">
    <h2 class="text-4xl md:text-5xl font-bold mb-6"><%= t('pages.home.cta_title') %></h2>
    <p class="text-xl text-gray-400 mb-10"><%= t('pages.home.cta_subtitle') %></p>
    <%= link_to t('pages.home.cta_button'), new_registration_path, class: "bg-folk-blue hover:bg-blue-600 text-white px-10 py-4 rounded-lg text-lg font-semibold transition" %>
  </div>
</section>
