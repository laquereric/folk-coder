    <div class="grid md:grid-cols-2 gap-8">
      <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-8">
        <div class="w-12 h-12 bg-folk-blue/20 text-folk-blue rounded-lg flex items-center justify-center text-xl mb-4">
