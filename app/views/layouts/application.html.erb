<!DOCTYPE html>
<html lang="<%= I18n.locale %>" class="h-full">
  <head>
    <title><%= content_for(:title) || "FolkCoder" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="FolkCoder">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="description" content="<%= t('layouts.application.meta_description') %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              folk: {
                dark: '#0f172a',
                blue: '#3b82f6',
                purple: '#8b5cf6',
                green: '#10b981',
                orange: '#f59e0b',
              }
            }
          }
        }
      }
    </script>

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="h-full bg-folk-dark text-gray-100 antialiased">
    <!-- Version Badge -->
    <div class="fixed top-1 left-2 z-[60] text-[10px] text-gray-500 font-mono">
      v<%= ApplicationController::APP_VERSION %>@<%= ApplicationController::GIT_SHA %><% if ApplicationController::GIT_DIRTY.present? %> <span class="text-folk-orange">*</span><% end %>
    </div>

    <!-- Navigation -->
    <nav class="fixed top-0 w-full bg-folk-dark/90 backdrop-blur-sm border-b border-gray-800 z-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <div class="flex items-center">
            <%= link_to root_path, class: "text-2xl font-bold" do %>
              <span class="text-folk-blue">Folk</span><span class="text-folk-green">Coder</span>
            <% end %>
          </div>
          <div class="hidden md:flex items-center space-x-8">
            <a href="#how-it-works" class="text-gray-300 hover:text-white transition"><%= t('layouts.application.nav_how_it_works') %></a>
            <a href="#features" class="text-gray-300 hover:text-white transition"><%= t('layouts.application.nav_features') %></a>
            <a href="#starting-gate" class="text-gray-300 hover:text-white transition"><%= t('layouts.application.nav_starting_gate') %></a>
            <%= link_to t('layouts.application.nav_faq'), faq_path, class: "text-gray-300 hover:text-white transition" %>
            <% if authenticated? %>
              <% if Current.user.admin? %>
                <%= link_to "Admin", admin_root_path, class: "text-folk-purple hover:text-purple-400 transition" %>
              <% end %>
              <span class="text-gray-300"><%= Current.user.name %></span>
              <%= button_to t('layouts.application.nav_log_out'), session_path, method: :delete, class: "text-gray-400 hover:text-white transition" %>
            <% else %>
              <%= link_to t('layouts.application.nav_sign_up'), new_registration_path, class: "bg-folk-blue hover:bg-blue-600 text-white px-4 py-2 rounded-lg font-medium transition" %>
            <% end %>
            <%= render "layouts/language_switcher" %>
          </div>
        </div>
      </div>
    </nav>

    <main>
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 border-t border-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="flex flex-col md:flex-row justify-between items-center">
          <div class="mb-4 md:mb-0">
            <span class="text-xl font-bold">
              <span class="text-folk-blue">Folk</span><span class="text-folk-green">Coder</span>
            </span>
            <p class="text-gray-500 text-sm mt-1"><%= t('layouts.application.footer_tagline') %></p>
          </div>
          <div class="text-gray-500 text-sm">
            &copy; <%= Date.today.year %> <%= t('layouts.application.footer_copyright') %>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
